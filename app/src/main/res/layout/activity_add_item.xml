<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddItemActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Add Item"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/enterproductname"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:hint="Enter Product Name"
                android:background="@drawable/edittextshape"
                android:textSize="20sp"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/enterproductprice"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:hint="Enter Product Price"
                android:background="@drawable/edittextshape"
                android:textSize="20sp"
                android:paddingLeft="15dp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@drawable/edittextshape"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/customCategoryInput"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:hint="Enter Custom Category"
                android:visibility="gone"
                android:background="@drawable/edittextshape"
                android:paddingLeft="15dp" />

            <Spinner
                android:id="@+id/subcategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@drawable/edittextshape"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/customSubcategoryInput"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:hint="Enter Custom Subcategory"
                android:visibility="gone"
                android:background="@drawable/edittextshape"
                android:paddingLeft="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AddItemButton"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Add Item"
                android:textColor="@color/white"
                android:background="@drawable/greenbuttonshape" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
